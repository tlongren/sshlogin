{
    "name": "sshlogin",
    "displayName": "sshlogin",
    "description": "auto login by ssh",
    "version": "0.0.5",
    "publisher": "seanchann",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "author": {
        "email": "seanchann.zhou@gmail.com",
        "name": "seanchann zhou"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seanchann/sshlogin"
    },
    "bugs": {
        "url": "https://github.com/seanchann/sshlogin/issues",
        "email": "seanchann.zhou@gmail.com"
    },
    "keywords": [
        "ssh",
        "login"
    ],
    "activationEvents": [
        "onCommand:extension.sshlogin"
    ],
    "homepage": "https://github.com/seanchann/sshlogin",
    "icon": "images/logo.jpg",
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sshlogin",
                "title": "sshlogin"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "SSHLogin",
            "properties": {
                "sshlogin.connection": {
                    "type": "array",
                    "description": "The connection information required to log in.",
                    "properties": {
                        "items": {
                            "type": "object",
                            "description": "connection information",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "default": "con1",
                                    "description": "the name of connection"
                                },
                                "user": {
                                    "type": "string",
                                    "default": "root",
                                    "description": "username"
                                },
                                "host": {
                                    "type": "string",
                                    "default": "localhost",
                                    "description": "host name for this connection"
                                },
                                "port": {
                                    "type": "int",
                                    "default": 22,
                                    "description": "connection port"
                                },
                                "keyfile": {
                                    "type": "string",
                                    "default": "~/.ssh/id_rsa",
                                    "description": "require private key file for ssh login user"
                                }
                            }
                        }
                    },
                    "default": [
                        {
                            "name": "local",
                            "user": "root",
                            "host": "localhost",
                            "port": 22,
                            "keyfile": "~/.ssh/id_rsa"
                        }
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    }
}
